        "long": "^4.0.0",
        "mobx": "^5.1.0",
        "mobx-react": "^5.2.5",
        "node-sass": "^4.9.3",
        "normalize.css": "^8.0.0",
        "object-assign": "4.1.1",
        "pixi.js": "^4.8.1",
        "postcss-flexbugs-fixes": "3.2.0",
        "postcss-loader": "2.0.8",
